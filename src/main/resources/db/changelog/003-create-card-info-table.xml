<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                       https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <changeSet id="003-card-info-table" author="Filimontsev_VV">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="card-info"/>
            </not>
        </preConditions>

        <createTable tableName="card_info" schemaName="public">
        <column name="id" type="BIGINT" autoIncrement="true">
            <constraints primaryKey="true" nullable="false"/>
        </column>
        <column name="user_id" type="BIGINT">
            <constraints nullable="false" referencedTableName="users" referencedColumnNames="id" foreignKeyName="fk_card_user"/>
        </column>
        <column name="number" type="VARCHAR(32)"/>
        <column name="holder" type="VARCHAR(200)"/>
        <column name="expiration_date" type="DATE"/>
    </createTable>
        <createIndex tableName="card_info" indexName="idx_card_user" schemaName="public">
            <column name="user_id"/>
        </createIndex>
        <createIndex tableName="card_info" indexName="idx_card_number" schemaName="public">
            <column name="number"/>
        </createIndex>

    </changeSet>
</databaseChangeLog>